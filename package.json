{
  "name": "@ykob/js-creative-util",
  "version": "1.0.0",
  "description": "Private JavaScript utility functions for Creative Coding created by @ykob",
  "author": {
    "name": "Yoichi Kobayashi",
    "email": "info@tplh.net",
    "url": "https://www.tplh.net/"
  },
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ykob/js-util.git"
  },
  "private": false,
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist/modules/",
    "dist/*.(ts,d.ts,js,js.map)",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc -p .",
    "clean": "rimraf dist",
    "copy": "cpx static/** dist",
    "lint:eslint": "eslint --ext \".js,.ts\" --ignore-path .gitignore . --fix",
    "lint:prettier": "prettier --write src/**/*",
    "lint": "npm run lint:prettier && npm run lint:eslint",
    "prebuild": "npm run clean",
    "prepare": "npm run build",
    "serve": "npm run build && npm run copy && npx http-server dist"
  },
  "devDependencies": {
    "@types/jest": "^27.4.1",
    "@typescript-eslint/eslint-plugin": "^5.13.0",
    "@typescript-eslint/parser": "^5.13.0",
    "cpx": "^1.5.0",
    "eslint": "^8.10.0",
    "eslint-config-prettier": "^8.5.0",
    "http-server": "^14.1.0",
    "prettier": "2.5.1",
    "rimraf": "^3.0.2",
    "typescript": "^4.6.2"
  },
  "keywords": [
    "JavaScript",
    "TypeScript"
  ]
}
